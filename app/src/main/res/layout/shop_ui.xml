<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_background">

            <ImageView
                android:id="@+id/shopPhoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/doorstep"/>

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopPhoto"
                android:text="Shah Ghosh"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/shopType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopName"
                android:text="Vegetables"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:textSize="15sp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/shopLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopType"
                android:text="Sector 22, Noida"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/ColorGrey"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>