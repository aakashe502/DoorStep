<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".order_details.OrderDetailsActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shoprectangle01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/abc_vector_test"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:src="@drawable/edit_pen"/>

    </RelativeLayout>

    <!--Order Info-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OrderId: "
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:id="@+id/orderIdTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="121212121"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="?android:attr/textColorPrimary"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd/MM/yyyy"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="?android:attr/textColorPrimary"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status: "
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:id="@+id/orderStatusTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Progress"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Email: "
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:id="@+id/customerEmailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gmail.com"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="?android:attr/textColorPrimary"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Phone: "
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:id="@+id/customerPhoneTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+9112345678"
                    android:autoLink="all"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="?android:attr/textColorPrimary"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items: "
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:id="@+id/totalItemsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="?android:attr/textColorPrimary"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount: "
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:id="@+id/amountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20B9 500"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="?android:attr/textColorPrimary"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Address: "
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>
                <TextView
                    android:id="@+id/deliveryAddressTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Address"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="?android:attr/textColorPrimary"/>
            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Ordered Items"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        android:layout_marginTop="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemsRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/productlist"/>

</LinearLayout>