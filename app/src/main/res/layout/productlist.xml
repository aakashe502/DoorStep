<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="0dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="#FFFEFE"
            app:cardCornerRadius="0dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/card"
                    app:cardBackgroundColor="#FFFEFE"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:cardMaxElevation="4dp"
                    app:cardPreventCornerOverlap="true">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:id="@+id/image"
                        android:src="@drawable/straw"
                        android:layout_margin="8dp"
                        android:scaleType="fitXY"

                        />
                </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Strawberry"
                android:layout_below="@+id/card"
                android:textSize="16dp"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"

                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:id="@+id/rs"
                    style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                    android:text="\u20B9"


                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_toRightOf="@+id/rs"
                    android:id="@+id/ruppee"
                    android:text="20"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="center"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:text="/Kg"
                    style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                    android:layout_below="@+id/name"
                    android:textSize="12dp"


                    android:layout_toRightOf="@+id/ruppee"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:id="@+id/value"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                   android:layout_centerInParent="true"
                    android:layout_below="@+id/value"
                    android:background="@color/colorAccent"
                    android:text="ADD"
                    android:id="@+id/addbutton"
                    android:layout_marginTop="2dp"
                    android:visibility="visible"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/value"
                    android:id="@+id/linear"
                    android:visibility="gone"
                    android:orientation="horizontal"

                    >
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:background="@drawable/minus1"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/minus"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="1"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000"

                        android:id="@+id/number"
                        android:textAlignment="center"
                        android:layout_marginTop="3dp"/>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:background="@drawable/plusicon"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/plus"/>

                </LinearLayout>












            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>