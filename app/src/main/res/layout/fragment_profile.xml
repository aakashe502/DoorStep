<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/admin_profile_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:civ_border_width="5dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorText"
                android:layout_below="@+id/admin_profile_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorText"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:background="@color/colorGrey01"
                android:layout_marginTop="10dp"
                android:textSize="0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:id="@+id/profile_layout">

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@color/colorText"
                    android:layout_centerHorizontal="false"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/profile"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:background="@color/colorGrey01"
                android:textSize="0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/orders_layout">

                <TextView
                    android:id="@+id/orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:textColor="@color/colorText"
                    android:layout_centerHorizontal="false"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/order"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orders_layout"
                android:background="@color/colorGrey01"
                android:textSize="0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orders_layout"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/saved_address">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saved Address"
                    android:textColor="@color/colorText"
                    android:layout_centerHorizontal="false"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/address"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saved_address"
                android:background="@color/colorGrey01"
                android:textSize="0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saved_address"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/share_with_friends">

                <TextView
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refer a friend"
                    android:textColor="@color/colorText"
                    android:layout_centerHorizontal="false"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/share_with_friends"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_with_friends"
                android:background="@color/colorGrey01"
                android:textSize="0dp"/>

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Logout"
                android:layout_below="@+id/share_with_friends"
                android:background="@color/colorSecondary"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="130dp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>