<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageview_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_width="5dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorText"
        android:layout_below="@+id/imageview_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorText"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/profile_layout"
        android:background="@drawable/border"
        >

        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/colorText"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/profile"
            android:textSize="30dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_layout"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/orders_layout"
        android:background="@drawable/border"
        >
        <TextView
            android:id="@+id/orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:textColor="@color/colorText"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/order"
            android:textSize="30dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orders_layout"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/share_with_friends"
        android:background="@drawable/border"
        >
        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="@color/colorText"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/share_with_friends"
            android:textSize="30dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:layout_below="@+id/share_with_friends"
        android:background="@color/colorSecondary"
        android:layout_marginTop="100dp"
        />

</RelativeLayout>