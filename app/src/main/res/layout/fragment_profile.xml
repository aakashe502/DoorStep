<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageview_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:civ_border_width="5dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000"
        android:layout_below="@+id/imageview_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:id="@+id/profile_layout"
        android:background="@drawable/border"
        >
        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#000"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/profile"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Your Profile Details"
            android:textColor="#000"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:paddingLeft="30dp"
            android:textSize="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_layout"
        android:orientation="vertical"
        android:id="@+id/orders_layout"
        android:background="@drawable/border"
        >
        <TextView
            android:id="@+id/orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:textColor="#000"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/order"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/orders_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Status"
            android:textColor="#000"
            android:layout_below="@+id/orders"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:paddingLeft="30dp"
            android:textSize="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orders_layout"
        android:orientation="vertical"
        android:id="@+id/share_with_friends"
        android:background="@drawable/border"
        >
        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="#000"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/share_with_friends"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/share_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell your friends about the app"
            android:textColor="#000"
            android:layout_below="@+id/share"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:paddingLeft="30dp"
            android:textSize="10dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:layout_below="@+id/share_with_friends"
        android:background="#45009688"
        android:layout_marginTop="100dp"
        />

</RelativeLayout>