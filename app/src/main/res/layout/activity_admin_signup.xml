<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ToolBar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="@drawable/shape_rect01">
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_button"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Seller"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            />

        <ImageButton
            android:id="@+id/gpsBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_gps_gray"
            android:layout_alignParentEnd="true"
            android:background="@null"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_circle01"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_key_white"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconIv">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView"
                android:layout_below="@+id/toolBar"
                android:layout_marginTop="2dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/admin_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_image"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="5dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/camera"
                    android:layout_gravity="bottom|right"
                    />
            </FrameLayout>

            <EditText
                android:id="@+id/adminName"
                android:layout_below="@+id/imageView"
                android:hint="Full Name"
                android:padding="10dp"
                android:drawableStart="@drawable/personicon"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="textPersonName|textCapWords"
                android:background="@drawable/shape_rect02" />
            <EditText
                android:id="@+id/adminShopName"
                android:layout_below="@+id/adminName"
                android:hint="Shop Name"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_store_gray"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="textPersonName|textCapWords"
                android:background="@drawable/shape_rect02" />
            <EditText
                android:id="@+id/adminPhone"
                android:layout_below="@+id/adminShopName"
                android:hint="Phone"
                android:padding="10dp"
                android:drawableStart="@drawable/phoneicon"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="phone"
                android:background="@drawable/shape_rect02" />

            <LinearLayout
                android:id="@+id/shopAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminPhone"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/shopCountry"
                    android:hint="Country"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_location_gray"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="textPostalAddress"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect02" />
                <EditText
                    android:id="@+id/shopState"
                    android:hint="State"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_location_gray"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="textPostalAddress"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect02" />
                <EditText
                    android:id="@+id/shopCity"
                    android:hint="City"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_location_gray"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="textPostalAddress"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect02" />

            </LinearLayout>

            <EditText
                android:id="@+id/shopFullAddress"
                android:layout_below="@+id/shopAddress"
                android:hint="Complete Address"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_location_gray"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="textPostalAddress|textMultiLine"
                android:layout_weight="1"
                android:background="@drawable/shape_rect02" />

            <EditText
                android:id="@+id/emailEt"
                android:layout_below="@+id/shopFullAddress"
                android:hint="Email"
                android:padding="10dp"
                android:drawableStart="@drawable/emailicon4"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/shape_rect02" />

            <EditText
                android:id="@+id/adminPassword"
                android:layout_below="@+id/emailEt"
                android:hint="Password"
                android:padding="10dp"
                android:drawableStart="@drawable/passicon"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="textPassword"
                android:background="@drawable/shape_rect02" />
            <EditText
                android:id="@+id/cnfPassword"
                android:layout_below="@+id/adminPassword"
                android:hint="Confirm Password"
                android:padding="10dp"
                android:drawableStart="@drawable/passicon"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="textPassword"
                android:background="@drawable/shape_rect02" />

            <Button
                android:id="@+id/registerBtn"
                android:text="Register"
                style="@style/Widget.AppCompat.Button.Colored"
                android:minWidth="120dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cnfPassword" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>